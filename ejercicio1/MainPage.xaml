<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ejercicio1"
             x:Class="ejercicio1.MainPage">
    <StackLayout>
        <Entry x:Name="Numero1Entry" Placeholder="Número 1" />
        <Entry x:Name="Numero2Entry" Placeholder="Número 2" />
        <Picker x:Name="OperacionPicker" Title="Selecciona una operación">
            <Picker.ItemsSource>
                    <x:String>Suma</x:String>
                    <x:String>Resta</x:String>
                    <x:String>Multiplicación</x:String>
                    <x:String>División</x:String>
                </Picker.ItemsSource>
           
        </Picker>
        <Button Text="Calcular" Clicked="CalcularButton_Clicked" />
    </StackLayout>
</ContentPage>
